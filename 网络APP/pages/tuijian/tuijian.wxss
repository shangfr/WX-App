/* pages/tuijian/tuijian.wxss */
/*外部容器*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
 
/*标题*/

.card-title {
  text-align: center;
  font-size: 40rpx;
  color: #33a3dc;
  border-bottom: 10px solid #eee;
  width: 100%;
}
/*整体列表*/

.card-list {
  display: flex;
  flex-direction: column;
  padding: 1rpx 40rpx;
}

/*每行单元格*/

.card-item {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 150rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 1rpx 0;
}

/*左部图片*/

.card-image {
  padding: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

/*右部描述*/

.card-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


/*左部分名称*/

.card-subtitle {
  font-size: 40rpx;
  color: black;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/*代码*/

.card-code {
  font-size: 30rpx;
  color: #d3d3d3;
}

/*右部*/

.card-pe {
  padding: 40rpx;
  font-size: 40rpx;
  color: #f60;
  width: 100%;
 
}
.img {
  width:750rpx;
}


.page_bd{
  padding: 10px;
  background-color: white;
}
.body_head{
  border: 0px solid;
  border-color: beige;
  padding: 10px;
}
.display_show{
  display: block;

}
.display_none{
  display: none;
}








.loading {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading__el {
  border-radius: 50%;
  width: 30px;
  height: 30px;
  border: 3px solid #60bed8;
  border-top-color: transparent;
  animation: loading__el 1s infinite linear;
}

@keyframes loading__el {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.rank__banner {
  background-image: linear-gradient(135deg, #79f1a4, #0e5cad);
  color: #fff;
  padding: 0 15px;
}

.rank__title {
  font-size: 20px;
  text-align: center;
  padding: 15px;
}

.rank__list {
  padding: 0 15px 15px;
}

.rank__item {
  padding: 15px 0;
  border-bottom: 1px dashed #ddd;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #fff;
  color: #4e4f54;
}

.rank__item--first {
  padding: 15px;
  text-align: center;
  overflow: hidden;
  background-color: rgba(8, 105, 132, .52);
  color: #60bed8;
  border: 0;
  flex-direction: column;
}

.rank__item--last {
  border-bottom: 0;
}

.rank__no {
  width: 50px;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.rank__icon {
  width: 60px;
  height: 60px;
  background: #f3f3f3;
}

.rank__icon--first {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-bottom: 10px;
  animation: rank__icon--first 20s infinite linear;
}

@keyframes rank__icon--first {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.rank__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 15px;
}

.rank__name {
  font-size: 18px;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.rank__detail {
  font-size: 14px;
  word-break: break-all;
  word-wrap: break-word;
}

.rank__detail--close {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}

.rank__tip {
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 0 15px 15px;
}



.card {
  padding: 32px 16px;
  margin: 0 auto 0 auto;
  width: 92%;
  min-height: auto;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 6px;
  box-shadow: 0 0 8px #007d65;
}
.card text {
  display: block;
}



.name {
  font-size: 35rpx;
  color: #DBAC5A;
  font-weight: bolder;
  line-height: 1;
  text-align: center;
}
.des {
  margin-top: 12px;
  font-size: 32rpx;
  color: #949494;
}















